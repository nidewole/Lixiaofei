<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical" >
    
       <TextView 
        android:id="@+id/tvOkHttpTips"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="okHttp tips 文本"
        android:textSize="20sp"/>
       <ImageView 
           android:id="@+id/ivBitmap"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="12dp"/>
    
    <Button 
        android:id="@+id/btnOkHttp1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="GET 下载图片"
        android:textSize="20sp"/>
    
 	<Button 
        android:id="@+id/btnOkHttp2"
        android:layout_marginTop="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="POST 请求"
        android:textSize="20sp"/>
  	<Button 
        android:id="@+id/btnOkHttp3"
        android:layout_marginTop="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="GET cache 请求"
        android:textSize="20sp"/>
   <Button 
        android:id="@+id/btnOkHttp4"
        android:layout_marginTop="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="下载文件 "
        android:textSize="20sp"/>
    <Button 
        android:id="@+id/btnOkHttp5"
        android:layout_marginTop="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="DELETE 请求"
        android:textSize="20sp"/>
    </LinearLayout>
</ScrollView>
